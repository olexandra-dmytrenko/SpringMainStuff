<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd
       ">

    <context:annotation-config/>

    <bean class="annotations.InjectRandomIntBeanPostProcessor"/>
    <bean class="annotations.MeasureTimeBeanPostProcessor"/>
    <bean class="annotations.PostProxyInvokerActionListener"/>
    <!--<context:component-scan base-package="people"/>-->
    <!--позволяет считывать аннотации дефолтные спринговые-->
    <!--Чтоб мочь считывать @PostProcessor-->
    <!--<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>-->


    <bean id="person1" class="people.Person" scope="singleton">
        <property name="name" value="Peter"/>
    </bean>

</beans>